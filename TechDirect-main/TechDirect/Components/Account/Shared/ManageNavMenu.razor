@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Routing
@using TechDirect.Data

@inject SignInManager<ApplicationUser> SignInManager

<ul class="account-nav nav flex-column">
    <li class="nav-item mb-1">
        <NavLink class="nav-link"
                 href="Account/Manage"
                 Match="NavLinkMatch.All">
            Profile
        </NavLink>
    </li>

    <li class="nav-item mb-1">
        <NavLink class="nav-link" href="Account/Manage/Email">
            Email
        </NavLink>
    </li>

    <li class="nav-item mb-1">
        <NavLink class="nav-link" href="Account/Manage/ChangePassword">
            Password
        </NavLink>
    </li>

    @if (hasExternalLogins)
    {
        <li class="nav-item mb-1">
            <NavLink class="nav-link" href="Account/Manage/ExternalLogins">
                External logins
            </NavLink>
        </li>
    }

    <li class="nav-item mb-1">
        <NavLink class="nav-link" href="Account/Manage/TwoFactorAuthentication">
            Two-factor authentication
        </NavLink>
    </li>

    @* Uncomment later if you add this page back
    <li class="nav-item mb-1">
        <NavLink class="nav-link" href="Account/Manage/PersonalData">
            Personal data
        </NavLink>
    </li>
    *@

    <!-- Customer orders (your custom page) -->
    <li class="nav-item mb-1">
        <NavLink class="nav-link" href="account/orders">
            My orders
        </NavLink>
    </li>

    <!-- Admin-only items -->
    <AuthorizeView Roles="Admin">
        <li class="nav-item mt-3 mb-1">
            <NavLink class="nav-link" href="admin/orders">
                All orders
            </NavLink>
        </li>
        <li class="nav-item mb-1">
            <NavLink class="nav-link" href="admin/products">
                Products
            </NavLink>
        </li>
        <li class="nav-item mb-1">
            <NavLink class="nav-link" href="admin/users">
                Users and roles
            </NavLink>
        </li>
    </AuthorizeView>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}








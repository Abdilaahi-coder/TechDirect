@page "/cart"
@rendermode InteractiveServer
@implements IDisposable
@using TechDirect.Services.Cart
@using TechDirect.Models

@inject CartService CartService

<h3>Your Cart</h3>

@if (!CartService.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col" class="text-end">Price</th>
                <th scope="col" class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CartService.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-end">@item.Price.ToString("C")</td>
                    <td class="text-end">
                        <button class="btn btn-danger" @onclick="() => Remove(item)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card shadow-sm mt-4">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h4 class="mb-3 mb-md-0">Total: @CartService.GetTotal().ToString("C")</h4>
            <div class="d-flex gap-2 flex-wrap">
                <NavLink class="btn btn-success" href="checkout">Proceed to Checkout</NavLink>
                <button class="btn btn-warning" @onclick="ClearCart">Clear Cart</button>
            </div>
        </div>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        CartService.CartChanged += HandleCartChanged;
    }

    void Remove(Product product) => CartService.RemoveFromCart(product);
    void ClearCart() => CartService.ClearCart();

    private void HandleCartChanged() => _ = InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        CartService.CartChanged -= HandleCartChanged;
    }
}

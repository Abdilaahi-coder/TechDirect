    private readonly List<CategoryCard> categories =
    [
        new("Laptops & Tablets", "Latest creator rigs, gaming laptops, and tablets.",
            ["OLED creator picks", "2-in-1 productivity", "Budget-friendly Chromebooks"], "/laptops"),
        new("Audio", "Noise-cancelling headphones and spatial audio systems.",
            ["Premium ANC", "Wireless earbuds", "Smart speakers"], "/products"),
        new("Smart Home", "Lighting, security, and automation staples.",
            ["Mesh Wi-Fi 7", "Connected thermostats", "Voice assistants"], "/products"),
        new("Gaming", "Consoles, controllers, monitors and accessories.",
            ["Next-gen consoles", "Esports monitors", "Flight & racing gear"], "/products")
    ];

    private readonly List<BundleCard> trendingBundles =
    [
        new("Hybrid Work Starter", "Laptop + monitor + dock bundle tailored after retail starter kits.", 1999, "Save $250"),
        new("Immersive Gaming Set", "OLED monitor, headset, and pro controller combo.", 1499, "Save $180"),

@page "/catalogue"
@rendermode InteractiveServer

<section class="page-hero mb-5">
    <div>
        <p class="text-uppercase text-secondary mb-2 fw-semibold">Shop the entire lineup</p>
        <h1 class="display-5 fw-bold">Catalogue inspired by big-box tech retailers</h1>
        <p class="lead text-muted">
            Borrowing the clearly segmented approach you see on storefronts like Best Buy or Currys, this catalogue
            surfaces the most requested categories with curated highlights under each.
        </p>
    </div>
</section>

<div class="row g-4 mb-5">
    @foreach (var category in categories)
    {
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm category-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@category.Name</h5>
                    <p class="text-muted">@category.Description</p>
                    <ul class="list-unstyled small flex-grow-1">
                        @foreach (var item in category.Highlights)
                        {
                            <li class="mb-1">• @item</li>
                        }
                    </ul>
                    <a class="btn btn-outline-primary mt-auto w-100" href="@category.Link">Explore</a>
                </div>
            </div>
        </div>
    }
</div>

<section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h2 class="h4 mb-0">Trending bundles</h2>
        <a class="btn btn-link" href="/deals">View all deals →</a>
    </div>
    <div class="row g-4">
        @foreach (var bundle in trendingBundles)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@bundle.Title</h5>
                            <span class="badge bg-success">@bundle.SavingsLabel</span>
                        </div>
                        <p class="text-muted mb-2">@bundle.Description</p>
                        <div class="fw-bold">@bundle.Price.ToString("C")</div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="mb-5">
    <h2 class="h4 mb-3">Services</h2>
    <div class="row g-4">
        @foreach (var service in services)
        {
            <div class="col-12 col-md-4">
                <div class="card h-100 border-0 bg-light">
                    <div class="card-body">
                        <h5 class="card-title">@service.Title</h5>
                        <p class="text-muted">@service.Body</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


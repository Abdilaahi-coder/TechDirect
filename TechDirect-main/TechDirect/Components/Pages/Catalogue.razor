        new("Smart Apartment Pack", "Wi-Fi mesh, video doorbell, and smart hub trio.", 799, "Save $120")
    ];

    private readonly List<ServiceCard> services =
    [
        new("White-Glove Setup", "Delivery, installation, and on-site calibration for TVs, projectors, and smart home gear."),
        new("Trade-In & Upgrade", "Instant credit when you trade select laptops, tablets, or consoles."),
        new("Protection Plans", "Accidental damage, AppleCare, and premium support bundles in one checkout.")
    ];

    private sealed record CategoryCard(string Name, string Description, IReadOnlyList<string> Highlights, string Link);
    private sealed record BundleCard(string Title, string Description, decimal Price, string SavingsLabel);
    private sealed record ServiceCard(string Title, string Body);
}

